<article class="excerpt">
  <h2 class="excerpt__title"><a class="excerpt__link" href="{{ post.link }}">{{ post.title }}</a></h2>
  <section class="excerpt__content">
    <p>{{ post.preview }}</p>
    {% if post.thumbnail %}
      <p><img class="excerpt__thumbnail" src="{{ post.thumbnail.src }}" alt="{{ post.thumbnail.alt }}"></p>
    {% endif %}
  </section>
</article>
