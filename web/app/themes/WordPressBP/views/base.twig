<!DOCTYPE html>
<html lang="{{ site.language }}">
<head>
  <meta charset="{{ site.charset }}">
  <meta name="viewport" content="width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=no">
  {{ wp_head }}
</head>
<body class="{{ body_class }}">

  <header class="header">
    <a class="header__logo" href="/" title="{{ site.name }}">{{ site.name }}</a>
    <nav class="header__nav nav-primary">
    {% spaceless %}
      <ul class="nav">
      {% for item in menus.primary %}
        <li class="{{ ['nav-primary__item']|merge(item.classes)|join(' ') }}">
          <a class="nav-primary__link" href="{{ item.link }}"{% if item.is_external %} target="_blank"{% endif %}>{{ item.title }}</a>
          {% if item.children %}
            <ul class="nav nav-primary__drop">
            {% for child in item.children %}
              <li class="{{ ['nav-primary__drop-item']|merge(child.classes)|join(' ') }}">
                <a class="nav-primary__drop-link" href="{{ child.link }}"{% if child.is_external %} target="_blank"{% endif %}>{{ child.title }}</a>
              </li>
            {% endfor %}
            </ul>
          {% endif %}
        </li>
      {% endfor %}
      </ul>
    {% endspaceless %}
    </nav>
  </header>

  <main class="main">
    {% block content %}
      <article class="post post_empty">
        <p>{{ i18n.no_content }}</p>
      </article>
    {% endblock %}
  </main>

  {% if primary_sidebar is defined and primary_sidebar %}
    <aside class="aside">
      {{ primary_sidebar }}
    </aside>
  {% endif %}

  {{ wp_footer }}
</body>
</html>
