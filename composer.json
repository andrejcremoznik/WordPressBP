{
  "name": "WordPressBP",
  "type": "project",
  "version": "1.0.0",
  "description": "WordPressBP WordPress website",
  "license": "MIT",
  "homepage": "https://github.com/andrejcremoznik/WordPressBP",
  "authors": [
    {
      "name": "Andrej Čremožnik",
      "email": "andrej@cremoznik.si",
      "homepage": "https://github.com/andrejcremoznik"
    }
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=5.6",
    "composer/installers": "^1.0",
    "vlucas/phpdotenv": "^2.2",
    "johnpbloch/wordpress": "^4.4",
    "wpackagist-plugin/disable-emojis": "^1.5",
    "wpackagist-plugin/timber-library": "^0.22"
  },
  "extra": {
    "installer-paths": {
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp"
  }
}
