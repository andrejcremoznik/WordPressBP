{
  "name": "WordPressBP",
  "type": "project",
  "version": "1.0.0",
  "description": "WordPressBP WordPress website",
  "license": "MIT",
  "homepage": "https://github.com/andrejcremoznik/WordPressBP",
  "authors": [
    {
      "name": "Andrej Cremoznik",
      "email": "andrej@cremoznik.si",
      "homepage": "https://keybase.io/andrejcremoznik"
    }
  ],
  "config": {
    "preferred-install": "dist"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=5.6"
  },
  "extra": {
    "installer-paths": {
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp"
  }
}
